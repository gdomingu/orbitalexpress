= form_for @seat do |f|
  - if @seat.errors.any?
    #error_explanation
      %h2= "#{pluralize(@seat.errors.count, "error")} prohibited this seat from being saved:"
      %ul
        - @seat.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :row
    = f.number_field :row
  .field
    = f.label :seat
    = f.text_field :seat
  .actions
    = f.submit 'Save'
