= form_for @spaceship do |f|
  - if @spaceship.errors.any?
    #error_explanation
      %h2= "#{pluralize(@spaceship.errors.count, "error")} prohibited this spaceship from being saved:"
      %ul
        - @spaceship.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
