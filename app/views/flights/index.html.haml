%h1 Welcome to Orbital Express

%div.large-4.columns
  = form_tag search_path, :method => "get" do
    = text_field_tag "query"
    = button_tag "Search", :type => "submit", :name => nil

%table
  %tr
    %th Name
    %th Launch hour
    %th Docking hour
    %th Launching from
    %th Docking at
    %th Weekday
    %th
    %th
    %th

  - @flights.each do |flight|
    %tr
      %td= flight.name
      %td= flight.launch_hour_id
      %td= flight.docking_hour_id
      %td= flight.launching_from_id
      %td= flight.docking_at_id
      %td= flight.weekday_id
      %td= link_to 'Show', flight
      %td= link_to 'Edit', edit_flight_path(flight)
      %td= link_to 'Destroy', flight, :method => :delete, :data => { :confirm => 'Are you sure?' }

%p Date:
%input{:type => "text", :id => "datepicker"}

%br

= link_to 'New Flight', new_flight_path
